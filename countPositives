function countPositivesSumNegatives(input) {
  // your code here
  let positive = 0;
  let negative = [];
  
  if (input === [] || input === null) {
    return [];
  }
  input.forEach(x => {
    if (x < 0) {
      negative.push(x);
    } else if ( x > 0) {
        positive++;
    }
  })
  let sum = negative.reduce((a,b) => a + b)
  return [positive, sum];
}
