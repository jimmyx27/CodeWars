
function twiceAsOld(dadYearsOld, sonYearsOld) {
  // your code here
  let x = 0;
  let y = 0;
  if (dadYearsOld === sonYearsOld * 2) {
      return x;
    }
  while (dadYearsOld > sonYearsOld * 2) {
    dadYearsOld++;
    sonYearsOld++;
    x++
    if (dadYearsOld === sonYearsOld * 2) {
      return x;
    }
  }
  while (dadYearsOld < sonYearsOld * 2) {
    dadYearsOld--;
    sonYearsOld--;
    y++;
    if (dadYearsOld === sonYearsOld * 2) {
      return y;
    }
  }
}
